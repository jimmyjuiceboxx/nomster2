<% @places.each do |place| %>

  <div class="detail-box col-xs-12 col-sm-10 col-sm-offset-1">
	<div class="panel">
	    <div class="panel-body">

	    	<h1 class="big_header"><%= image_tag("https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/32/beer.png", class: "icon") %><%= link_to place.name, place_path(place) %></h1><br /> 

		  	
	      
	       	
	    	<div class="address_box col-xs-12 col-sm-5">
	        <h4>Address:</h4>   
	        <p><%= place.address %></p>
            </div>

            <div class="place_box pull-right col-xs-12 col-sm-7">
							<% if place.photos.last.present? && place.photos.last.picture.present? %>
							<%= image_tag place.photos.last.picture, :class => 'img-responsive' %>
							<% end %>
			</div> 

           	
       		<div class="description_box col-xs-12 col-sm-5">
            <h4>Description:</h4>
            <p><%= place.description %></p>
            </div>

	            
         

              	

		     

		    	
						
			


			<br />
		   

		    

    		<% if place.comments.present? %>
			  <div class="index-comment col-xs-12">
			    <blockquote>
			      <% if place.comments.last.humanized_rating.present? %>
			        <b><%= place.comments.last.humanized_rating %></b> -
			      <% end %>
			      <%= place.comments.last.message %>
			      <small><%= place.comments.last.user.email %></small>
			    </blockquote>
			  </div>
			<% end %>
	    </div>
	</div>	 	 
  </div>
		 	<% end %>

		<!--Pagination -->		
				<div class="text-center">
					<ul class="pagination">
						<%= will_paginate @places, renderer: BootstrapPagination::Rails %>
					</ul>		    
				</div>